<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/responsive.css">
    <link rel="stylesheet" href="/css/myproject.css">
</head>
<body style=" margin: 0;">
    <div class="container-fluid m-0">
        <div class="row align-items-center">
            <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #E5CDA7;">
                <div class="container-fluid">
                    <a class="navbar-brand" href="home">
                        <img src="/img/logo.png" alt="Logo" width="40">
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-between" id="navbarNav">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link btn btn-outline-primary" href="index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn btn-outline-primary" href="myproject">My Project</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn btn-outline-primary" href="testimonial">Testimoial</a>
                            </li>
                        </ul>
                        <a class="btn btn-outline-primary contact" href="contact">Contact Me</a>
                    </div>
                </div>
            </nav>
        </div>
    </div>
    <div style="background-color: white;" id="section2" class="project-post section2">
        <h1 style="padding-top: 50px; text-align: center;">MY PROJECT</h1>
        <div class="mt-2 float-end" style="margin-right: 10px;">
            <a href="addmyproject" class="btn btn-outline-primary mb-5">Add Project</a>
        </div>
        <div class="row mt-5 w-100">
            {{#each dataProject}}
            <div class="col-md-4">
                <div class="project-card d-flex" id="project-card">
                    <div id="existing-card" class="card-item ">
                        <div class="project-grid" id="project-grid">
                            <div class="project-image">
                                {{#if this.image}}
                                <img src="/uploads/{{this.image}}" alt="">
                                {{else}}
                                <img src="/uploads/img.jpg" alt="Default Image">
                                {{/if}}
                            </div>
                            <div class="text-content d-flex flex-column">
                                <h4 style="float: left; padding-left: 20px;"><a
                                        style="text-decoration: none; color: black;"
                                        href="/detail/{{this.id}}">{{this.title}}</a></h4>
                                <div class="project-detail"></div>
                                <p>{{this.createdAt}} | {{this.author}}</p>
                                <p>{{this.content}}</p>
                            </div>
                            <div class="logo-bahasa">
                                <i class="fab fa-node-js"></i>
                                <i class="fab fa-android"></i>
                                <i class="fab fa-java"></i>
                            </div>
                            <div class="btn-project">
                                <a href="/edit/{{this.id}}" class="btn1 btn">edit</a>
                                <a href="/delete/{{this.id}}" class="btn2 btn">delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>