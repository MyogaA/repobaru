<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/myproject.css">
</head>

<body>
    <div class="container-fluid m-0">
        <div class="row align-items-center">
            <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #E5CDA7;">
              <div class="container-fluid">
                <a class="navbar-brand" href="home">
                  <img src="/img/logo.png" alt="Logo" width="40">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                  aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                  <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-between" id="navbarNav">
                  <ul class="navbar-nav">
                    <li class="nav-item">
                      <a class="nav-link btn btn-outline-primary" href="index">Home</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link btn btn-outline-primary" href="addmyproject">My Project</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn btn-outline-primary" href="testimonial">Testimonial</a>
                      </li>
                  </ul>
                  <a class="btn btn-outline-primary contact" href="contact">Contact Me</a>
                </div>
              </div>
            </nav>
        </div>
      </div>
    <section class="section1">
        <div class="addmyproject">
            <div class="container">
                <h1>Edit Project</h1>
                <form action="/update/{{ id }}" method="post">
                    <div class="form-group">
                        <label for="">Project Name</label>
                        <input type="text" id="projectname" value="{{ data.title }}" name="title" required
                            oninput="this.style.borderColor = '';">
                    </div>
                    <div class="form-group">
                        <label for="message">Description</label>
                        <textarea id="message" name="content" required
                            oninput="this.style.borderColor = '';">{{ data.content }}</textarea>
                    </div>
                    <label style="font-weight: bold;" for="checkbox">Technologies</label>
                    <div class="card checkbox-card flex-row">
                        <div class="checkbox-item">
                            <input type="checkbox" name="nodejs" id="nodejs">
                            <label for="nodejs">nodejs</label>
                        </div>
                        <div class="checkbox-item">
                            <input type="checkbox" name="reactjs" id="reactjs">
                            <label for="reactjs">react js</label>
                        </div>
                        <div class="checkbox-item">
                            <input type="checkbox" name="nextjs" id="nextjs">
                            <label for="nextjs">next js</label>
                        </div>
                        <div class="checkbox-item">
                            <input type="checkbox" name="typescript" id="typescript">
                            <label for="typescript">typescript</label>
                        </div>
                    </div>
                    <label style="font-weight: bold;" for="upload-img">Upload image</label>
                    <div class="image">
                        <label for="image">
                            attach file
                        </label>
                        <input type="file" name="input-image" id="input-img">
                    </div>
                    <button type="submit" id="button" class="submit-btn">Submit</button>
                </form>
            </div>
        </div>
    </section>
    
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>